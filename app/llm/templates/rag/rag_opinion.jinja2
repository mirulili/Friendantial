  <price>{{ "%.0f"|format(tech_analysis.price) }}</price>
  <ma5>{{ "%.0f"|format(tech_analysis.ma5) }}</ma5>
  <ma20>{{ "%.0f"|format(tech_analysis.ma20) }}</ma20>
  <ma60>{{ "%.0f"|format(tech_analysis.ma60) }}</ma60>
